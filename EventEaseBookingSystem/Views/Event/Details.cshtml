@model EventEaseBookingSystem.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.EventName</h5>
        <p class="card-text"><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
        <p class="card-text"><strong>Venue:</strong> @Model.Venue?.VenueName</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>