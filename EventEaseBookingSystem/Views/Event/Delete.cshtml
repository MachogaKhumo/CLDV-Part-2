@model EventEaseBookingSystem.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<h4>Are you sure you want to delete this event?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.EventName</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.EventDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger" style="background-color: #b8a4c9; color: black; border-radius: 5px; padding: 8px 12px;">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>