@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Booking</a>
</p>

<table class="table table-striped table-bordered" style="background-color: #2d578a;">
    <thead class="table-dark">
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Event.EventName</td>
                <td>@item.Venue.VenueName</td>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" style="background-color: #f5ccd4; color: black; border-radius: 5px; padding: 8px 12px;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" style="background-color: #c9def4; color: black; border-radius: 5px; padding: 8px 12px;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" style="background-color: #b8a4c9; color: black; border-radius: 5px; padding: 8px 12px;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>