@model Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EventId" class="control-label"></label>      
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId">Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
    </div>

    <button type="submit" style="background-color: #ed6a5e; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
